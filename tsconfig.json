{
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    },
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./example/**/*",
        "./src/**/*"
    ]
}
